#!/bin/sh
if [[ "$OSTYPE" =~ ^msys ]]; then
    export NVM_DIR="$HOME/.nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
    . "$(dirname "$0")/_/husky.sh"
else
    export NVM_DIR="$HOME/.nvm/nvm.sh"
    . "$(dirname $NVM_DIR)/nvm.sh"

    export NVM_DIR="$HOME/.nvm"
    a=$(nvm ls | grep 'node')
    b=${a#*(-> }
    v=${b%%[)| ]*}

    export PATH="$NVM_DIR/versions/node/$v/bin:$PATH"
fi

#fix & format
npx lint-staged

# Check ESLint Standards
npm run lint ||
(
    echo 'ğŸ™ˆğŸ‘·ğŸ”¨âŒ Yoo, your code looks disgusting. Check linter ğŸ™ˆğŸ‘·ğŸ”¨âŒ
          Run npm run lint, add changes and try commit again.';
    false;
)

echo 'ğŸ‰ğŸ‰ğŸ‰ğŸ‰ Yeayy, there is no error in your code... I am committing this now. âœ¨ğŸš€ğŸ„â€â™‚ï¸ğŸ»'